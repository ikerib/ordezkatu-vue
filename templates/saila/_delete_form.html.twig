<form method="post" action="{{ path('saila_delete', {'id': saila.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ saila.id) }}">
    <button class="btn">Delete</button>
</form>
