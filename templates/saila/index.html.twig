{% extends 'base.html.twig' %}

{% block title %}Saila index{% endblock %}

{% block body %}
    <h1>Saila index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for saila in sailas %}
            <tr>
                <td>{{ saila.id }}</td>
                <td>{{ saila.name }}</td>
                <td>{{ saila.created ? saila.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ saila.updated ? saila.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('saila_show', {'id': saila.id}) }}">show</a>
                    <a href="{{ path('saila_edit', {'id': saila.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('saila_new') }}">Create new</a>
{% endblock %}
